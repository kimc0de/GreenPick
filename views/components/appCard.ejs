<div>
    <h2 id="suggestedAppsHeader">
        Suggested Apps:
    </h2>
    <div class="row" id="app-card">
    <% data.forEach(app => { %>
        <div class="col col-lg-4 col-md-6 col-12" onclick="location.href='/app/<%=app._id%>';">
            <div class="card-body category-<%=app.category.toLowerCase()%> d-flex">
                <div class="app-logo" style="background-image: url('/images/good_on_you_logo.png')"></div>
                <div>
                    <h2><%= app.name; %></h2>
                    <p class="app-slogan"><%= app.slogan %></p>
                    <div class="badge rounded-pill text-light category-badge-<%=app.category.toLowerCase()%>"><%= app.category %></div>
                </div>
            </div>
        </div>
    <% })%>
    </div>
</div>
