<div>
    <h2 id="suggestedAppsHeader">
        Suggested Apps:
    </h2>
    <div class="row ">
    <% data.forEach(app => { %>
        <div class="col col-lg-4 col-md-6 col-12" onclick="location.href='/app/<%=app._id%>';" style="cursor: pointer;">
            <div class="card-body category-<%=app.category.toLowerCase()%> d-flex">
                <div class="appLogo" style="background-image: url('/images/good_on_you_logo.png')"></div>
                <div>
                    <h2><%= app.name; %></h2>
                    <p><%= app.slogan %></p>
                    <span class="badge rounded-pill text-light category-badge-<%=app.category.toLowerCase()%>"><%= app.category %></span>
                </div>
            </div>
        </div>
    <% })%>
    </div>
</div>
