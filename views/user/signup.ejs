<form action="/signup" method="POST" class="signup-form container col-12 col-md-7 col-xl-4">
    <img src="/images/greenpick/logo3.svg" alt="GreenPick logo">
    <h1 class="text-center">Join us!</h1>

    <div class="signup-form-field">
        <label for="user-name">Username</label>
        <input type="text" name="username" id="user-name" class="form-control" autofocus required>
    </div>

    <div class="signup-form-field">
        <label for="user-email">Email</label>
        <input type="email" name="email" id="user-email" class="form-control" required>
    </div>

    <div class="signup-form-field">
        <label for="user-password">Password</label>
        <input type="password" name="password" id="user-password" class="form-control" required>
    </div>

    <div class="signup-form-field">
        <label for="user-password-repeat">Repeat password</label>
        <input type="password" name="password_repeat" id="user-password-repeat" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary">Sign up</button>
    <div>
        <a href="/auth/google" role="button">
            Sign up with Google
        </a>
    </div>
</form>
